<div class="mx-auto md:w-2/3 w-full">
  <div class="inline-block mb-7">
    <%=
      link_to t("timesheet_entry.create"),
        new_timesheet_entry_path,
        class: "
          text-gray-800
          hover:text-white
          border-2
          border-gray-800
          hover:bg-gray-700
          focus:ring-4
          focus:outline-none
          focus:ring-gray-300
          font-medium
          rounded-md
          px-5 py-3
          text-center
        "
    %>
  </div>

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl my-5 text-gray-800">Timesheet entries</h1>

  <div id="timesheet_entries" class="min-w-full">
    <table class="w-full text-left text-gray-500">
      <tbody>
        <% @timesheet_entries.each do |timesheet| %>
            <tr class="bg-white border light:bg-gray-800 light:border-gray-700 hover:bg-gray-50 light:hover:bg-gray-600">
              <td class="py-4 px-6 font-lg">
                <span class="text-gray-900"> <%= "#{timesheet.date.strftime("%d/%m/%Y")}: " %> </span>
                <span class="text-orange-900">
                  <%=
                    "#{Time.at(timesheet.starts_at).utc.strftime("%H:%M")} - #{Time.at(timesheet.ends_at).utc.strftime("%H:%M")}"
                  %>
                </span>
                <span>&nbsp<%= "$#{timesheet.caculated_ammount}" %></span>
              </td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
