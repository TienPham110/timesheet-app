<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="inline-block mb-5">
    <%= link_to t("timesheet_entry.create"), new_timesheet_entry_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <h1 class="font-bold text-4xl mb-5">Timesheet entries</h1>
  <hr class="mt-5">

  <div id="timesheet_entries" class="min-w-full">
    <% @timesheet_entries.each do |timesheet| %>
      <%= "#{timesheet.date.strftime("%d/%m/%Y")}: #{timesheet.starts_at.strftime("%H:%M")} - #{timesheet.ends_at.strftime("%H:%M")} $#{}" %>
    <% end %>
  </div>
</div>
